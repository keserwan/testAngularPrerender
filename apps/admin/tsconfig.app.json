{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/apps/admin",
    "types": [
      "jasmine", "node"
    ],



    "baseUrl": "src",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "jszip": [
        "../../../node_modules/jszip/dist/jszip.min.js"
      ]
    }



  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["src/test.ts", "**/*.spec.ts","**/testing/*"]

}
